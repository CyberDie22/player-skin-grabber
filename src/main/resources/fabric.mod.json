{
  "schemaVersion": 1,
  "id": "playerskingrabber",
  "version": "${version}",

  "name": "Player Skin Grabber",
  "description": "Grabs the skin of the player you are looking at",
  "authors": [
    "Me!"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "CC0-1.0",
  "icon": "assets/modid/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "com.benbuzard.playerskingrabber.PlayerSkinGrabber"
      }
    ]
  },
  "mixins": [
    "playerskingrabber.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.12",
    "fabric": "*",
    "minecraft": ">=1.19.x",
    "java": ">=17",
    "fabric-language-kotlin": ">=1.9.0+kotlin.1.8.0"
  }
}
